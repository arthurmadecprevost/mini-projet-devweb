{% extends 'base.html.twig' %}

{% block title %}{{ event.libelle }}{% endblock %}

{% block eventPage %}
    <a class="nav-item nav-link active" href="{{ path('evenement.list') }}">Evenements</a>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            {{ event.lieu }} - {{ event.date|format_datetime(locale='fr') }}
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ event.libelle }}</h5>
            <p class="card-text">{{ event.description }}</p>
            <a href="#" class="btn btn-primary">Commenter</a>
            <a href="{{ path('annonce.create', {id:event.id}) }}" class="btn btn-primary">Ajouter une annonce</a>
        </div>
    </div>


    {{ form_start(commentaire) }}
    {{ form_widget(commentaire) }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Enregistrer</button>
        </div>
    </div>
    {{ form_end(commentaire) }}

{% endblock %}